            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.BillingAddress.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.BillingAddress.ZipCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.BillingAddress.ZipCode)
            </dd>

        </dl>
    </div>
</div>

