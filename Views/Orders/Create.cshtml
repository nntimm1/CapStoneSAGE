@model SAGEWebsite.Models.Order

@{
    ViewData["Title"] = "Customer";
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Order</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="Customer.ShippingAddressId" />
            <input type="hidden" asp-for="Customer.BillingAddressId" />
            <input type="hidden" asp-for="Customer.PaymentId" />
            <input type="hidden" asp-for="ItemId" />
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingOption" class="control-label"></label>
                <select asp-for="ShippingOption" class="control-label">
                    <option value="7-10 Day">7-10 Day Free</option>
                    <option value="2-3 Day">2-5 Day $10.99</option>
                    <option value="Overnight">Overnight 14.99</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Item.ItemName" class="control-label"></label>
                <input class="form-control" value="@ViewBag.ItemName" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Item.UnitPrice" class="control-label"></label>
                <input class="form-control" value="@ViewBag.ItemPrice" readonly>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <h3>Customer Information</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Payment.CreditCardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Payment.CreditCardNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.EmailAddress)
        </dd>
    </dl>
    <div>
        <h3>Shipping Address</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ShippingAddress.Address1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ShippingAddress.Address1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ShippingAddress.StreetAddress2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ShippingAddress.StreetAddress2)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ShippingAddress.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ShippingAddress.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ShippingAddress.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ShippingAddress.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ShippingAddress.ZipCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ShippingAddress.ZipCode)
            </dd>
        </dl>

        <div>
            <h3>Billing Address</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer.BillingAddress.Address1)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.BillingAddress.Address1)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer.BillingAddress.StreetAddress2)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.BillingAddress.StreetAddress2)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer.BillingAddress.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.BillingAddress.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer.BillingAddress.State)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.BillingAddress.State)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer.BillingAddress.ZipCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.BillingAddress.ZipCode)
                </dd>

            </dl>
        </div>
    </div>


